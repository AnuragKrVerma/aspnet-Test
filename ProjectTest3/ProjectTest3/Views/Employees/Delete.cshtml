@using ProjectTest3.Dto
@model EmployeeDto

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-2">Name</dt>
        <dd class="col-10">@Model.Name</dd>

        <dt class="col-2">Email</dt>
        <dd class="col-10">@Model.Email</dd>

        <dt class="col-2">Phone Number</dt>
        <dd class="col-10">@Model.PhoneNumber</dd>

        <dt class="col-2">Position</dt>
        <dd class="col-10">@Model.PositionName</dd>

        <dt class="col-2">Gender</dt>
        <dd class="col-10">@Model.GenderName</dd>

        <dt class="col-2">Languages</dt>
        <dd class="col-10">@(string.Join(", ", Model.LanguageNames))</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>